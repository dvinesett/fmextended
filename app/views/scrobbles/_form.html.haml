= form_for(@scrobble) do |f|
  - if @scrobble.errors.any?
    #error_explanation
      %h2
        = pluralize(@scrobble.errors.count, 'error')
        prohibited this scrobble from being saved:
      %ul
        - @scrobble.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :time
    %br/
    = f.date_select :time
  .field
    = f.label :track_name
    %br/
    = f.text_field :track_name
  .field
    = f.label :artist_name
    %br/
    = f.text_field :artist_name
  .field
    = f.label :album_name
    %br/
    = f.text_field :album_name
  .field
    = f.label :application
    %br/
    = f.text_field :application
  %br
  .actions
    = button_tag type: 'submit', class: 'btn btn-primary' do
      Create Scrobble
